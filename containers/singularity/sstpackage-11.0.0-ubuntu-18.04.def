##############################################
# sstpackage-11.0.0-ubuntu-18.04.def
##############################################
Bootstrap: debootstrap
OSVersion: bionic
MirrorURL: http://us.archive.ubuntu.com/ubuntu/
Include: software-properties-common

%setup
  mkdir -p ${SINGULARITY_ROOTFS}/opt/SST/11.0.0/src
  mkdir -p ${SINGULARITY_ROOTFS}/opt/SST/11.0.0/elements

%files
  sstcore-11.0.0.tar.gz /opt/SST/11.0.0/src/
  sstelements-11.0.0.tar.gz /opt/SST/11.0.0/src/

%environment
  PATH=$PATH:/opt/SST/11.0.0/bin

%runscript
  echo "SSTCore 11.0.0 using Ubuntu 18.04 created $NOW"
  echo "Arguments utilized: $*"
  exec echo "$@"

%post
  add-apt-repository 'deb http://archive.ubuntu.com/ubuntu bionic main universe'
  add-apt-repository 'deb http://archive.ubuntu.com/ubuntu bionic-security main universe'
  add-apt-repository 'deb http://archive.ubuntu.com/ubuntu bionic-updates main universe'
  apt-get update && apt-get install -y \
    build-essential \
    automake \
    openmpi-bin \
    libopenmpi-dev \
    python3 \
    python3-dev \
    python3-pip \
    doxygen \
    libjpeg8-dev \
    openssh-server \
    zlib1g-dev

  python3 -m pip install --find-links=. \
    black \
    matplotlib \
    matplotlib-label-lines \
    networkx==2.4 \
    numpy==1.19.1 \
    pandas \
    setuptools \
    xmltodict \
    wheel \
    testtools \
    blessings \
    pygments

  echo "btl_base_warn_component_unused = 0" >> /etc/openmpi/openmpi-mca-params.conf
  cd /opt/SST/11.0.0/src
  tar --no-same-owner -xvzf sstcore-11.0.0.tar.gz
  cd sstcore-11.0.0; ./configure --prefix=/opt/SST/11.0.0; make -j all; make install

  cd /opt/SST/11.0.0/src
  tar --no-same-owner -xvzf sstelements-11.0.0.tar.gz
  cd sst-elements-library-11.0.0; ./configure --prefix=/opt/SST/11.0.0/elements -with-sst-core=/opt/SST/11.0.0; make -j all; make install

  NOW=`date`
  echo "export NOW=\"${NOW}\"" >> $SINGULARITY_ENVIRONMENT

%help
  SST 11.0.0-Ubuntu 18.04: Creates an SST Core + Elements image with the necessary software dependencies

%labels
  Author contact@tactcomplabs.com
  Version 11.0.0
