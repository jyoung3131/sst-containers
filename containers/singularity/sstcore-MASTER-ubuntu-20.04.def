##############################################
# sstcore-MASTER-ubuntu-20.04.def
##############################################
Bootstrap: debootstrap
OSVersion: focal
MirrorURL: http://us.archive.ubuntu.com/ubuntu/
Include: software-properties-common dbus-user-session

%setup
  mkdir -p ${SINGULARITY_ROOTFS}/opt/SST/MASTER/src

%files

%environment
  PATH=$PATH:/opt/SST/MASTER/bin

%runscript
  echo "SSTCore GIT MASTER using Ubuntu 18.04 created $NOW"
  echo "Arguments utilized: $*"
  exec echo "$@"

%post
  add-apt-repository 'deb http://archive.ubuntu.com/ubuntu focal main universe'
  add-apt-repository 'deb http://archive.ubuntu.com/ubuntu focal-security main universe'
  add-apt-repository 'deb http://archive.ubuntu.com/ubuntu focal-updates main universe'
  apt-get update && apt-get install -y \
    build-essential \
    automake \
    openmpi-bin \
    libopenmpi-dev \
    python3 \
    python3-dev \
    python3-pip \
    doxygen \
    git \
    libtool \
    libtool-bin

  python3 -m pip install --find-links=. \
    black \
    matplotlib \
    matplotlib-label-lines \
    networkx==2.4 \
    numpy==1.19.1 \
    pandas \
    setuptools \
    xmltodict \
    wheel \
    testtools \
    blessings \
    pygments \
    pdoc3

  cd /opt/SST/MASTER/src
  git clone https://github.com/sstsimulator/sst-core.git
  cd sst-core; ./autogen.sh; ./configure --disable-mpi --prefix=/opt/SST/MASTER; make -j all; make install

  NOW=`date`
  echo "export NOW=\"${NOW}\"" >> $SINGULARITY_ENVIRONMENT

%help
  SST Git Master-Ubuntu 20.04: Creates a basic SST Core image with the necessary software dependencies

%labels
  Author contact@tactcomplabs.com
  Version MASTER
