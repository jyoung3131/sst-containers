##############################################
# sstcore-MASTER-ubuntu-18.04.def
##############################################
Bootstrap: debootstrap
OSVersion: bionic
MirrorURL: http://us.archive.ubuntu.com/ubuntu/
Include: software-properties-common

%setup
  mkdir -p ${SINGULARITY_ROOTFS}/opt/SST/MASTER/src

%files

%environment
  PATH=$PATH:/opt/SST/MASTER/bin

%runscript
  echo "SSTCore GIT MASTER using Ubuntu 18.04 created $NOW"
  echo "Arguments utilized: $*"
  exec echo "$@"

%post
  add-apt-repository 'deb http://archive.ubuntu.com/ubuntu bionic main universe'
  add-apt-repository 'deb http://archive.ubuntu.com/ubuntu bionic-security main universe'
  add-apt-repository 'deb http://archive.ubuntu.com/ubuntu bionic-updates main universe'
  apt-get update && apt-get install -y \
    build-essential \
    automake \
    openmpi-bin \
    libopenmpi-dev \
    python3 \
    python3-dev \
    python3-pip \
    doxygen \
    git \
    libtool \
    libtool-bin \
    libjpeg8-dev \
    openssh-server \
    zlib1g-dev \
    valgrind

  python3 -m pip install --find-links=. \
    black \
    matplotlib \
    matplotlib-label-lines \
    networkx==2.4 \
    numpy==1.19.1 \
    pandas \
    setuptools \
    xmltodict \
    wheel \
    testtools \
    blessings \
    pygments

  echo "btl_base_warn_component_unused = 0" >> /etc/openmpi/openmpi-mca-params.conf
  cd /opt/SST/MASTER/src
  git clone https://github.com/sstsimulator/sst-core.git
  cd sst-core; ./autogen.sh; ./configure --prefix=/opt/SST/MASTER; make -j4 all; make install

  NOW=`date`
  echo "export NOW=\"${NOW}\"" >> $SINGULARITY_ENVIRONMENT

%help
  SST Git Master-Ubuntu 18.04: Creates a basic SST Core image with the necessary software dependencies

%labels
  Author contact@tactcomplabs.com
  Version MASTER
